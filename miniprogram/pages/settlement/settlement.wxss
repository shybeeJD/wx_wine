#container {
  font-size: medium;
}
.c1 {
  display: flex;
  flex-direction: row;
  min-height: 72px;
  margin: 10px;
  overflow: auto;
  border-radius: 5px;
  box-shadow: 1px 1px 5px #cdcfcf, 1px 1px 5px #cdcfcf;
  background-color: #ffffff;
}
.c1 .address_content {
  display: flex;
  flex: 10;
  flex-direction: column;
  padding: 10px 10px 0 10px;
}
.c1 .address_content .info {
  display: flex;
  flex: 1;
  flex-direction: row;
}
.c1 .address_content .info .name {
  display: flex;
  align-items: center;
}
.c1 .address_content .info .block {
  width: 10px;
}
.c1 .address_content .info .tel {
  font-size: small;
  display: flex;
  align-items: center;
  color: gray;
}
.c1 .address_content .address {
  display: flex;
  flex: 1;
  font-size: small;
}
.c1 .arrow {
  flex: 1;
  display: flex;
  align-items: center;
  color: gray;
}
.underLine {
  width: 100%;
  height: 1px;
  display: inline;
  padding-top: 10upx;
  margin: 0 auto;
  border-bottom: 1px solid #f7f7f7;
}
.c2 {
  display: flex;
  flex-direction: column;
  min-height: 224px;
  margin: 10px;
  overflow: auto;
  border-radius: 5px;
  box-shadow: 1px 1px 5px #cdcfcf, 1px 1px 5px #cdcfcf;
  background-color: #ffffff;
}
.c2 .c2_title {
  flex: 1;
  padding: 0px 10px 0px 10px;
  display: flex;
  align-items: center;
  font-weight: bold;
  min-height: 56px;
}
.c2 .c2_goodsList {
  display: flex;
  align-items: center;
  flex: 1;
}
.c2 .c2_goodsList .list {
  display: flex;
  flex-direction: column;
  min-height: 56px;
  padding: 0 10px 0 10px;
  margin-bottom: 10px;
  width: 100%;
}
.c2 .c2_goodsList .list .item {
  display: flex;
  align-items: center;
  flex: 1;
  min-height: 56px;
  font-size: small;
}
.c2 .c2_goodsList .list .item .title {
  flex: 2;
}
.c2 .c2_goodsList .list .item .num {
  flex: 1;
  text-align: right;
  font-size: smaller;
}
.c2 .c2_goodsList .list .item .price {
  flex: 1;
  text-align: right;
  font-size: medium;
}
.c2 .c2_discount {
  align-items: center;
  flex: 1;
  padding: 0px 10px 0px 10px;
  min-height: 56px;
  display: flex;
  flex-direction: row;
}
.c2 .c2_discount .title {
  flex: 1;
}
.c2 .c2_discount .value {
  flex: 1;
  text-align: right;
  color: gray;
}
.c2 .c2_total {
  display: flex;
  height: 56px;
  align-items: center;
  flex: 1;
  padding: 0px 10px 0px 10px;
  min-height: 56px;
  margin-left: auto;
}
.c2 .c2_total .text {
  font-size: small;
  color: gray;
}
.c2 .c2_total .block {
  width: 10px;
}
.c2 .c2_total .price {
  color: red;
  font-size: large;
}
.notes {
  min-height: 56px;
  margin: 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0px 10px 0px 10px;
  overflow: auto;
  border-radius: 5px;
  box-shadow: 1px 1px 5px #cdcfcf, 1px 1px 5px #cdcfcf;
  background-color: #ffffff;
}
.notes .tips {
  color: gray;
}
.notes .tips .arrow {
  color: black;
}
.Submit {
  width: 100%;
  min-height: 56px;
  position: absolute;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #ffffff;
}
.Submit .price {
  color: red;
  flex: 2;
  font-size: large;
  margin-left: 10px;
}
.Submit .btn {
  flex: 1;
  text-align: right;
  margin-right: 10px;
  background-color: #ff585a;
  color: white;
  height: 39.2px;
  border-radius: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
}
